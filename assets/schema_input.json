{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/references/master/assets/schema_input.json",
    "title": "nf-core/references pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "genome": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Genome name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "source": {
                "type": "string",
                "errorMessage": "Source of genome must be provided and cannot contain spaces",
                "meta": ["source"]
            },
            "source_vcf": {
                "type": "string",
                "errorMessage": "Source of the VCF file must be provided and cannot contain spaces",
                "default": "unknown",
                "meta": ["source_vcf"]
            },
            "reference_version": {
                "type": "string",
                "errorMessage": "What is the version of the reference used to create gff/gtf and transcript related files",
                "default": "unknown",
                "meta": ["reference_version"]
            },
            "species": {
                "type": "string",
                "errorMessage": "Species of the reference, cannot contain spaces",
                "meta": ["species"]
            },
            "intervals_bed": {
                "type": "string",
                "pattern": "^\\S+\\.bed$",
                "errorMessage": "TODO"
            },
            "fasta": {
                "type": "string",
                "pattern": "^\\S+\\.f(ast|n)?a(\\.gz)?$",
                "errorMessage": "TODO"
            },
            "fasta_dict": {
                "type": "string",
                "pattern": "^\\S+\\.dict(\\.gz)?$",
                "errorMessage": "TODO"
            },
            "fasta_fai": {
                "type": "string",
                "pattern": "^\\S+\\.f(ast|n)?a\\.fai(\\.gz)?$",
                "errorMessage": "TODO"
            },
            "fasta_sizes": {
                "type": "string",
                "pattern": "^\\S+\\.f(ast|n)?a\\.sizes(\\.gz)?$",
                "errorMessage": "TODO"
            },
            "gff": {
                "type": "string",
                "pattern": "^\\S+\\.gff(\\.gz)?$",
                "errorMessage": "TODO"
            },
            "gtf": {
                "type": "string",
                "pattern": "^\\S+\\.gtf(\\.gz)?$",
                "errorMessage": "TODO"
            },
            "splice_sites": {
                "type": "string",
                "pattern": "^\\S+(\\.splice_sites)(\\.txt)?$",
                "errorMessage": "TODO"
            },
            "transcript_fasta": {
                "type": "string",
                "pattern": "^\\S+\\.f(ast|n)?a(\\.gz)?$",
                "errorMessage": "TODO"
            },
            "vcf": {
                "type": "string",
                "pattern": "^\\S+\\.vcf\\.gz$",
                "errorMessage": "TODO"
            },
            "readme": {
                "type": "string",
                "errorMessage": "TODO"
            },
            "bed12": {
                "type": "string",
                "errorMessage": "TODO"
            },
            "mito_name": {
                "type": "string",
                "errorMessage": "TODO"
            },
            "macs_gsize": {
                "type": "integer",
                "errorMessage": "TODO"
            }
        },
        "required": ["genome", "source", "species"]
    }
}

{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/nf-validation/example/master/assets/schema_input.json",
  "title": "nf-validation example - params.input schema",
  "description": "Schema for the file provided with params.input",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "genome": {
        "type": "string",
        "pattern": "^\\S+$",
        "errorMessage": "Genome name must be provided and cannot contain spaces"
      },
      "fasta": {
        "type": "string",
        "pattern": "^\\S+\\.f(ast)?a(\\.gz)?$",
        "errorMessage": "TODO"
      },
      "gtf": {
        "type": "string",
        "errorMessage": "TODO"
      },
      "bed12": {
        "type": "string",
        "errorMessage": "TODO"
      },
      "readme": {
        "type": "string",
        "errorMessage": "TODO"
      },
      "mito_name": {
        "type": "string",
        "errorMessage": "TODO"
      },
      "macs_gsize": {
        "type": "string",
        "errorMessage": "TODO"
      },
    },
    "required": ["genome", "fasta", "gtf"]
  }
}

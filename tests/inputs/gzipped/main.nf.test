nextflow_pipeline {

    name "gzipped inputs"
    script "../../../main.nf"
    tag "input"

    test("Should run with a gzipped gtf") {
        tag "gtf"

        when {
            params {
                input = "${projectDir}/tests/inputs/gzipped/gzip_gtf.yml"
                outdir = "$outputDir"
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(UTILS.removeNextflowVersion("$outputDir/pipeline_info/nf_core_references_software_mqc_versions.yml")).match("software_versions") },
                // { assert snapshot(
                //     // FIXME workflow.trace.tasks().size(),
                // ).match("output_files")
                // }
            )
        }
    }
}
